            <div class="col col-md-6">
                <div class="form-group">
                    <label asp-for="Player.GuestName" class="control-label"></label>
                    <input asp-for="Player.GuestName" class="form-control" />
                    <span asp-validation-for="Player.GuestName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-6">
                <div class="form-group">
                    <label asp-for="Player.PlayDate" class="control-label"></label>
                    <input asp-for="Player.PlayDate" class="form-control" />
