@using Pogi.Models.HandicapViewModels
@model HandicapEditViewModel ;

<br />
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Handicap Index Entry</h4>
<hr />
<div class="row">
    <div class="alert-info col ">
        @Html.DisplayFor(modelItem => Model.Member.FirstName)
        @Html.DisplayFor(modelItem => Model.Member.LastName)
    </div>
    <div class="alert-info col ">
        GHIN @Html.DisplayFor(modelItem => Model.Member.GhinNumber)
    </div>
    <div class="alert-info col ">
        Current Handicap @Html.DisplayFor(modelItem => Model.Member.CurrHandicap)
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HandicapId" />
            <input type="hidden" asp-for="GhinNumber" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HcpIndex" class="control-label"></label>
                <input asp-for="HcpIndex" class="form-control" />
                <span asp-validation-for="HcpIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Handicap" asp-route-id="@Model.Member.MemberId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
